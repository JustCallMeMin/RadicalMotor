		</div>
	</div>
	<!-- Spinner End -->

	<!-- Navbar Start -->
	<nav class="navbar navbar-expand-lg bg-white navbar-light shadow sticky-top p-0">
		<a	asp-controller="home" 
			asp-action="index"
			class="navbar-brand d-flex align-items-center px-4 px-lg-5">
			<h2 class="m-0 text-primary">
				<i class="fa fa-solid fa-motorcycle"></i> RadicalMotor
			</h2>
		</a>
		<button type="button"
				class="navbar-toggler me-4"
				data-bs-toggle="collapse"
				data-bs-target="#navbarCollapse">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarCollapse">
			<div class="navbar-nav ms-auto p-4 p-lg-0">
				<a	asp-controller="home" 
					asp-action="index" 
					class="nav-item nav-link ">Home
				</a>
				<a asp-controller="Products"
					asp-action="index"
				   class="nav-item nav-link ">
					Motorcycles
				</a>
				<div class="nav-item dropdown">
					<a	asp-controller="service" 
						asp-action="index" 
						class="nav-item nav-link">Services
					</a>
				</div>
			</div>
			<!-- Sign In Button -->
			<a id="modal_trigger"
			   href="#modal"
			   class="btn btn-primary py-4 px-lg-5 d-lg-block">
				<i class="fa fa-sign-in-alt"></i> Sign In Now
			</a>

			<!-- Logout Button -->
			<a id="logout_trigger"
			   href="#"
			   class="btn btn-primary py-4 px-lg-5 d-lg-block d-none">
				<i class="fa fa-sign-out-alt"></i> Logout
			</a>


		</div>
	</nav>
	<!-- Navbar End -->

	<!--Pop-up Signin Start-->
	<div id="modal" class="popupContainer" style="display: none">
		<div class="popupHeader">
			<span class="header_title">Login</span>
			<span class="modal_close">
				<i class="fa fa-times"></i>
			</span>
		</div>

		<section class="popupBody">
			<!-- Social Login -->
			<div class="social_login">
				<div class="">
					<a href="#" class="social_box fb">
						<span class="icon">
							<i class="fab fa-facebook"></i>
						</span>
						<span class="icon_title">Connect with Facebook</span>
					</a>

					<a href="#" class="social_box google">
						<span class="icon">
							<i class="fab fa-google-plus"></i>
						</span>
						<span class="icon_title">Connect with Google</span>
					</a>
				</div>

				<div class="centeredText">
					<span>Or use your Email address</span>
				</div>

				<div class="action_btns">
					<div class="one_half">
						<a	href="#" id="login_form" 
							class="btn btn-primary">Login
						</a>
					</div>
					<div class="one_half last">
						<a	href="#" id="register_form" 
							class="btn btn-primary">Sign up
						</a>
					</div>
				</div>
			</div>

			<!-- Username & Password Login form -->
			<div class="user_login">
				<form id="loginForm">
					<label for="email">Email</label>
					<input type="text" id="email" name="email" required />
					<br />

					<label>Password</label>
					<input type="password" id="log_password" name="password" required />
					<i class="fa fa-eye-slash toggle-password" id="log_toggle-password"></i>
					<br />

					<div class="form-check checkbox">
						<input class="form-check-input" type="checkbox" id="remember">
						<label class="form-check-label" for="remember">Remember me on this computer</label>
					</div>


					<div class="action_btns">
						<div class="one_half">
							<a	href="#" 
								class="btn btn-primary back_btn">
								<i class="fa fa-angle-double-left"></i> Back
							</a>
						</div>
						<div class="one_half last">
							<button type="submit"
									id="login_btn"
									data-index-url="@Url.Action("index", "home")"
									class="btn btn-primary btn_red" 
									style="width: 140px">Login
							</button>
						</div>
					</div>
				</form>

				<a href="#" id="forgot_password">Forgot password?</a>
			</div>


			<!-- ForgotPassword-->
			<div class="user_forgotpassword">
				<form>
					<label>Email Address</label>
					<input type="email" />
					<br />

					<div class="action_btns">
						<div class="one_half">
							<a	href="#" 
								class="btn btn-primary back_btn">
								<i class="fa fa-angle-double-left"></i>Back
							</a>
						</div>
						<div class="one_half last">
							<a	href="#" 
								class="btn btn-primary btn_red">Reset
							</a>
						</div>
					</div>
				</form>
			</div>

			<!-- Register Form -->
			<div class="user_register">
				<form id="registrationForm">
					<label>Username</label>
					<input type="text" name="fullName" required />
					<br />

					<label>Email Address</label>
					<input type="email" name="email" required />
					<br />

					
					<label>Password</label>
					<input type="password" id="reg_password" name="password" required />
					<i class="fa fa-eye-slash toggle-password" id="reg_toggle-password" ></i>
					<br />
					

					@* <div class="checkbox">
						<input id="send_updates" type="checkbox" name="sendUpdates" />
						<label for="send_updates">Send me occasional email updates</label>
					</div> *@

					<div class="action_btns">
						<div class="one_half">
							<a	href="#" 
								class="btn btn-primary back_btn">
								<i class="fa fa-angle-double-left"></i> Back
							</a>
						</div>
						<div class="one_half last">
							<button type="submit" 
									class="btn btn-primary btn_red" 
									style="width: 140px">Register
							</button>
						</div>
					</div>
				</form>
			</div>
		</section>
	</div>
	<!--Pop-up Signin End-->

	@RenderBody()

