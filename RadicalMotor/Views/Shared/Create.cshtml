@model RadicalMotor.DTO.VehicleDTO
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Create new</h1>

<h4>Vehicle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ChassisNumber" class="control-label"></label>
                <input asp-for="ChassisNumber" class="form-control" />
                @* <span asp-validation-for="ChassisNumber" class="text-danger"></span> *@
            </div>
            <div class="form-group">
                <label asp-for="VehicleName" class="control-label"></label>
                <input asp-for="VehicleName" class="form-control" />
                @* <span asp-validation-for="VehicleName" class="text-danger"></span> *@
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                @* <span asp-validation-for="Price" class="text-danger"></span> *@
            </div>
            <div class="form-group">
                <label asp-for="Version" class="control-label"></label>
                <input asp-for="Version" class="form-control" />
                @* <span asp-validation-for="Version" class="text-danger"></span> *@
            </div>
            <div class="form-group">
                <label asp-for="ImageUrls" class="control-label"></label>
                <input type="file" asp-for="ImageUrls" class="form-control" />
                @* <span asp-validation-for="ImageUrls" class="text-danger"></span> *@
            </div>
            <div class="form-group">
                <label asp-for="VehicleType" class="control-label"></label>
                <select asp-for="VehicleType" asp-items="ViewBag.VehicleTypes" class="form-control"></select>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index"><button type="button" class="btn btn-info mt-2">Back</button></a>
</div>
